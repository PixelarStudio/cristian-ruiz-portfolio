---
// Button.astro
const { variant = 'primary', children, ...props } = Astro.props;
---

<button class={`button ${variant}`} {...props}>
  {children}
</button>

<style>
.button {
  padding: 10px 20px;
  border: none;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s ease;
}

.primary {
  background-color: #007bff;
  color: white;
}

.secondary {
  background-color: #6c757d;
  color: white;
}

.button:hover {
  opacity: 0.8;
}

.button:focus {
  outline: none;
}
</style>
