---
interface Props {
  title: string;
}

const { title } = Astro.props;
const img = "../public/favicon.ico"
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href={img} type="image/x-icon">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body >
    <slot />
  </body>

  <div class="relative h-full w-full bg-white"><div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_0%,#000_70%,transparent_110%)]">
    
  </div></div>
</html>

<style>
  :root {
   }


  html {
    font-family: Menlo, Monaco, "Lucida Sans", "Lucida Sans Regular",
      "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
    background: #fff;
    letter-spacing: -0.01rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  a {
    text-decoration: none;
  }

  ul {
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #888;
    font-size: 0.8rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  @media print {
  body {
    font-size: 12pt;
  }
  .no-print {
    display: none;
  }
  /* Ajusta el tamaño de la página para A4 */
  @page {
    size: A4;
    margin: 10mm;
  }



}

  
</style>
