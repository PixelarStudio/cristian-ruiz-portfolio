import Education from "@/pages/Education.astro";
import Experience from "@/pages/Experience.astro";
import Hero from "@/components/Sections/Hero.astro";
import Layout from "@/layouts/Layout.astro";
import Projects from "@/pages/Projects.astro";
import Skills from "@/pages/Skills.astro";
import KeyboardManager from "@/components/KeyboardManager.astro";
import CustomBackground from "@/components/CustomBackground.astro";
import Lang from "@/pages/Lang.astro";
