import Footer from "@/components/Sections/Footer.astro";

---


<Layout title="Cristian Ruiz Portfolio">


      <CustomBackground />
      <NavBar />
      <main>
        <Hero id="hero"/>
        <About id="about"/>
        <Experience id="experience" />
        <Education id="education"/>
        <Lang  id="lang"/>
        <Projects id="projects"/>
        <Skills id="skills"/>
