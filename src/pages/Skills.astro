---
import Section from "@/components/Section.astro";
import { skills } from "@/cv.json";
---

<Section  title="Habilidades" >

  <div class="relative sm:block w-auto">
    {
      skills.map((skill) => (
        <div class=" w-auto h-auto inline-block justify-center gap-3 p-1 m-1 font-medium bg-slate-300 rounded-md text-red-900 text-center text-sm" id="skills">
          <h2  class="text-md">{skill.name}</h2>
        </div>
      ))
    }
    
  </div>
 
  
</Section>

